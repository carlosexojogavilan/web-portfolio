<script is:inline>
  const heroSection = document.getElementById("home");
  const themeToggler = document.getElementById("themeToggle");

  console.log(heroSection, themeToggler);
  
  function changeBackground() {
    const isDarkMode = document.documentElement.classList.contains("dark");
    if(isDarkMode) {
      heroSection.classList.remove("bg-hero-light");
      heroSection.classList.add("bg-hero-dark");
    }
    else {
      heroSection.classList.remove("bg-hero-dark");
      heroSection.classList.add("bg-hero-light");
    }
  }
  
  changeBackground();

  themeToggler.addEventListener('click', changeBackground);
</script>